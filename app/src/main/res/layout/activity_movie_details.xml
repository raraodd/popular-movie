<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.wendy.popularmovieapp.feature.moviedetail.MovieDetailsActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <ImageView
                android:id="@+id/iv_poster_details"
                android:layout_width="150dp"
                android:layout_height="220dp"
                android:scaleType="fitXY"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp">
                <TextView
                    android:id="@+id/tv_title_and_year_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:id="@+id/tv_runtime_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:textSize="14dp"
                    android:layout_below="@+id/tv_title_and_year_details"/>
                <TextView
                    android:id="@+id/tv_release_date_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:textSize="14sp"
                    android:layout_below="@+id/tv_runtime_details"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:orientation="horizontal"
                    android:layout_below="@id/tv_release_date_details">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star"/>
                    <TextView
                        android:id="@+id/tv_rating_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:textSize="22sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="/10"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true">
                    <ImageView
                        android:id="@+id/iv_unfavorite_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_unfavorite"
                        android:clickable="true"
                        android:visibility="visible"/>
                    <ImageView
                        android:id="@+id/iv_favorite_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_favorite"
                        android:clickable="true"
                        android:visibility="gone"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:text="Mark as favorite!"
                        android:textSize="16sp"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@color/colorPrimary">
            <TextView
                android:id="@+id/tv_synopsis"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Synopsis"
                android:textSize="16dp"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:clickable="true"/>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlackTransparent"/>
            <TextView
                android:id="@+id/tv_review"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Review"
                android:textSize="16dp"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:clickable="true"/>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlackTransparent"/>
            <TextView
                android:id="@+id/tv_video"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Video"
                android:textSize="16dp"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:clickable="true"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_synopsis_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This overview"
            android:textSize="16dp"
            android:visibility="visible"
            android:padding="8dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_review_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:padding="8dp"/>

    </TableLayout>

</ScrollView>