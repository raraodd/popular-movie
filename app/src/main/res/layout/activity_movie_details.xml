<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.wendy.popularmovieapp.feature.moviedetail.MovieDetailsActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_medium">
            <ImageView
                android:id="@+id/iv_poster_details"
                android:layout_width="@dimen/image_width_small"
                android:layout_height="@dimen/image_height_medium"
                android:scaleType="fitXY"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/padding_medium">
                <TextView
                    android:id="@+id/tv_title_and_year_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:id="@+id/tv_runtime_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_extra_small"
                    android:textSize="@dimen/text_size_small"
                    android:layout_below="@+id/tv_title_and_year_details"/>
                <TextView
                    android:id="@+id/tv_release_date_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_extra_small"
                    android:textSize="@dimen/text_size_small"
                    android:layout_below="@+id/tv_runtime_details"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_extra_small"
                    android:orientation="horizontal"
                    android:layout_below="@id/tv_release_date_details">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star"/>
                    <TextView
                        android:id="@+id/tv_rating_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_extra_small"
                        android:textSize="@dimen/text_size_extra_large"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_medium"
                        android:text="@string/vote_denominator"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true">
                    <ImageView
                        android:id="@+id/iv_unfavorite_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_unfavorite"
                        android:clickable="true"
                        android:visibility="visible"/>
                    <ImageView
                        android:id="@+id/iv_favorite_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_favorite"
                        android:clickable="true"
                        android:visibility="gone"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_extra_small"
                        android:text="Mark as favorite!"
                        android:textSize="@dimen/text_size_medium"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_medium"
            android:background="@color/colorPrimary">
            <TextView
                android:id="@+id/tv_synopsis"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Synopsis"
                android:textSize="@dimen/text_size_medium"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:clickable="true"/>
            <View
                android:layout_width="@dimen/separator"
                android:layout_height="match_parent"
                android:background="@color/colorBlackTransparent"/>
            <TextView
                android:id="@+id/tv_review"
                android:layout_width="@dimen/layout_relative"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Review"
                android:textSize="@dimen/text_size_medium"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:clickable="true"/>
            <View
                android:layout_width="@dimen/separator"
                android:layout_height="match_parent"
                android:background="@color/colorBlackTransparent"/>
            <TextView
                android:id="@+id/tv_video"
                android:layout_width="@dimen/layout_relative"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Video"
                android:textSize="@dimen/text_size_medium"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:clickable="true"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_synopsis_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This overview"
            android:textSize="@dimen/text_size_medium"
            android:visibility="visible"
            android:padding="@dimen/padding_medium"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_review_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:padding="@dimen/padding_medium"/>

    </TableLayout>

</ScrollView>